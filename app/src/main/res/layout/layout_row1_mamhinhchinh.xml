<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    android:orientation="horizontal"
    android:gravity="center"
    android:clipToPadding="false"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cvRestaurant"
        android:layout_height="@dimen/cardViewHeight"
        android:layout_width="@dimen/cardViewWidth"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/imgCardViewWidth"
                android:layout_height="@dimen/imgCardViewHeight"
                android:src="@drawable/restaurant"
                android:padding="10dp"
                android:background="@drawable/cricle_background"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhà hàng"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvHospital"
        android:layout_height="@dimen/cardViewHeight"
        android:layout_width="@dimen/cardViewWidth"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/imgCardViewWidth"
                android:layout_height="@dimen/imgCardViewHeight"
                android:src="@drawable/hospital"
                android:padding="10dp"
                android:background="@drawable/cricle_background"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bệnh viện"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvAtm"
        android:layout_height="@dimen/cardViewHeight"
        android:layout_width="@dimen/cardViewWidth"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/imgCardViewWidth"
                android:layout_height="@dimen/imgCardViewHeight"
                android:src="@drawable/atm"
                android:padding="10dp"
                android:background="@drawable/cricle_background"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atm"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
